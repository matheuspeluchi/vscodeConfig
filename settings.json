{
  "editor.fontSize": 13,
  "editor.lineHeight": 22,
  //"editor.fontFamily": "CaskaydiaCove NF",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  // Aplica linhas verticais para lembrar de quebrar linha em códigos muito grandes
  "editor.rulers": [80, 120],
  // Aplica um sinal visual na esquerda da linha selecionada
  "editor.renderLineHighlight": "gutter",
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "[prisma]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },
  // Define o tema dos ícones na sidebar
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "editor.tabSize": 2,
  "git.suggestSmartCommit": false,
  "git.enableSmartCommit": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "explorer.confirmDelete": false,
  "git.decorations.enabled": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "workbench.editor.wrapTabs": true,
  "editor.suggestSelection": "first",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Fira Code",
  // "terminal.integrated.fontFamily": "CaskaydiaCove NF",
  "terminal.integrated.rightClickBehavior": "default",
  "git.autoStash": true,
  "redhat.telemetry.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "fontFamily": "Fira Code"
    }
  },
  "terminal.integrated.profiles.windows": {
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell",
      "fontFamily": "CaskaydiaCove NF"
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "window.restoreFullscreen": true,
  "window.newWindowDimensions": "maximized",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "editor.wordWrapColumn": 150,
  "html.format.wrapAttributes": "preserve-aligned",
  "editor.wrappingIndent": "indent",
  "diffEditor.wordWrap": "on",
  "editor.wordWrap": "on",
  "html.format.wrapLineLength": 0,
  "html.format.wrapAttributesIndentSize": 2,
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },
  "explorer.compactFolders": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "diffEditor.codeLens": true,
  "debug.console.fontSize": 14,
  "markdown.preview.fontSize": 14,
  "scm.inputFontSize": 14,
  "git.confirmSync": false,
  "workbench.colorTheme": "Omni-Customized",
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.codeLensFontFamily": "Fira Code",
  "git.mergeEditor": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript", "typescript"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "git.openRepositoryInParentFolders": "never",
  "path-intellisense.extensionOnImport": true,
  "sonarlint.rules": {
    "typescript:S1226": {
      "level": "off"
    },
    "java:S120": {
      "level": "off"
    },
    "java:S3740": {
      "level": "off"
    },
    "java:S1640": {
      "level": "off"
    },
    "java:S3599": {
      "level": "off"
    }
  },
  "sonarlint.testFilePattern": "!**/node_modules/**",
  "boot-java.rewrite.reconcile": true,

  //JAVA Config

  "java.jdt.ls.lombokSupport.enabled": true,
  "java.format.settings.url": "https://github.com/matheuspeluchi/vscodeConfig/blob/main/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  }
}
